<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools" android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">


    <Button
            android:text="Reset password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/reset_password_btm"
            app:layout_constraintTop_toBottomOf="@+id/reset_email_btm" app:layout_constraintStart_toStartOf="@+id/reset_email_btm"
            app:layout_constraintEnd_toEndOf="@+id/reset_email_btm" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="32dp" app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintVertical_bias="0.101" android:layout_marginTop="8dp" android:layout_marginEnd="8dp"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:hint="Email address"
            android:ems="10"
            android:id="@+id/reset_email_btm"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.198"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:importantForAutofill="no"/>
</androidx.constraintlayout.widget.ConstraintLayout>